{
  "name": "chain-drive-calculator",
  "version": "1.0.0",
  "main": "dist/electron/main.js",
  "scripts": {
    "dev": "concurrently -k \"npm:dev:renderer\" \"npm:dev:electron\"",
    "dev:renderer": "vite",
    "dev:electron": "NODE_ENV=development tsc -p tsconfig.electron.json && wait-on http://localhost:5173 && electron ./dist/electron/main.js",
    "build": "vite build && tsc -p tsconfig.electron.json",
    "start": "NODE_ENV=production electron ./dist/electron/main.js"
  },
  "devDependencies": {
    "@types/node": "^22.19.1",
    "@types/react": "^18.3.27",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react": "^5.1.1",
    "concurrently": "^8.2.2",
    "electron": "^30.5.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vite": "^5.4.21",
    "wait-on": "^9.0.3"
  }
}
